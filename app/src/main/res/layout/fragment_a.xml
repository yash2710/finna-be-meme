<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.material.katha.toolbar.FragmentA">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:background="#009688"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#009688"
            android:orientation="horizontal">

            <EditText xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/etext"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_gravity="center_horizontal"
                android:background="#ffffff"
                android:hint="Search Doctors and Clinics..."></EditText>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="#ffffff"
                android:text="GO"
                android:id="@+id/button" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/etext"
            android:layout_margin="10dp"
            android:text="PICK FROM COMMON SPECIALITIES" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/tablist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"></android.support.v7.widget.RecyclerView>

</RelativeLayout>
