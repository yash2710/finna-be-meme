<org.lucasr.dspec.DesignSpecFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:designSpec="@raw/spec">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eee"
        tools:context="com.material.katha.toolbar.NavigationDrawerFragment">

        <LinearLayout
            android:id="@+id/ContainerDrowerImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FB8C00">
            <!-- TODO: Update blank fragment layout -->
            <ImageView
                android:id="@+id/wallpaper"
                android:layout_width="280dp"
                android:layout_height="240dp"
                android:src="@mipmap/ic_launcher" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/drawerList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ContainerDrowerImage"></android.support.v7.widget.RecyclerView>
    </RelativeLayout>

</org.lucasr.dspec.DesignSpecFrameLayout>
